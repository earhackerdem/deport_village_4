[mysqld]
# Configuración general
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Slow Query Log - Queries lentas
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 1
log_queries_not_using_indexes = 1

# General Query Log (opcional, desactivado por defecto por performance)
# general_log = 1
# general_log_file = /var/log/mysql/general.log

# Performance Schema para monitoreo avanzado
performance_schema = ON
performance-schema-instrument = 'statement/%=ON'
performance-schema-consumer-events-statements-history-long = ON

# Optimizaciones de memoria (ajusta según tus recursos)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
max_connections = 200

# Binlog (útil para réplica y debugging)
server-id = 1
log_bin = /var/log/mysql/mysql-bin.log
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M

[client]
default-character-set = utf8mb4
